{
  "install": {
    "command": "pip3 install --user -r requirements.txt",
    "includeFiles": ["requirements.txt"]
  },
  "start": {
    "command": "bash start.sh",
    "shellType": "bash"
  },
  "watch": {
    "ignore": [
      "\\.pyc$",
      "__pycache__",
      "\\.git",
    ],
    "install": {
      "include": [
        "^requirements\\.txt$"
      ]
    },
    "restart": {
      "include": [
        "\\.py$",
        "^start\\.sh",
      ],
      "exclude": [
        "^\\."
      ]
    },
    "throttle": 1000
  }
}
