{
  "install": "pip3 install --user -r requirements.txt",
  "start": "python3 main.py",
  "watch": {
    "ignore": [
      "\\.pyc$",
      "__pycache__",
      "node_modules",
      "\\.git",
    ],
    "install": {
      "include": [
        "^requirements\\.txt$"
      ]
    },
    "restart": {
      "include": [
        "\\.py$",
        "^start\\.sh",
      ]
    },
    "throttle": 1000
  }
}
